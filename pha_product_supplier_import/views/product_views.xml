<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
        <record id="view_partner_form_inherited" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_inline oe_stat_button" type="action" string="Import Tarifs"
                                     context="{'default_supplier_id': context.get('id')}"

                    name="%(tarif_import_action)d" icon="fa-mail-forward" attrs="{'invisible': [('supplier', '=', False)]}"/>
                </xpath>

                <notebook>
    <page string="Tarifs Fournisseurs">
        <sheet>
<field name="suppliers_ids"/>

        </sheet>
    </page>
 </notebook>


           </field>
        </record>

</data>
</odoo>
