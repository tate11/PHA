<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
        <record id="view_partner_form_inherited" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_inline oe_stat_button" type="action" string="Import Tarifs"
                                     context="{'default_supplier_id': context.get('id')}"

                    name="%(tarif_import_action)d" icon="fa-mail-forward" attrs="{'invisible': [('supplier', '=', False)]}"/>
                </xpath>

                <notebook>
                    <page string="Tarifs Fournisseurs">
                        <field name="suppliers_ids">
                            <tree>
                                 <field name="product_code"/>
                                <field name="product_tmpl_id"/>
                                <field name="min_qty"/>
                                <field name="max_qty"/>
                                <field name="price"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </tree>
                        </field>
                    </page>
                 </notebook>


           </field>
        </record>






    <record id="product_supplierinfo_tree_view_inherited" model="ir.ui.view">
            <field name="name">product.supplierinfo.tree.inherited</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <field name="min_qty" position="after">
                     <field name="max_qty"/>

                </field>


           </field>
        </record>


</data>
</odoo>
